{
  "name": "iotronic-lightning-rod",
  "version": "1.0.2",
  "description": "Implementation of the Lightning-rod, the Stack4Things node-side probe (this version works with the standalone version of IoTronic) http://stack4things.unime.it/",
  "main": "lightning-rod.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "node lightning-rod.js",
    "postinstall": "./scripts/postinst",
    "uninstall": "./scripts/postuninst",
    "_noderify_lr": "noderify -f statvfs -f mknod -f fuse-bindings -f ideino-linino-lib -f ./build/Release/bufferutil.node -f ./build/Release/validation.node",
    "build:init": "npm run clean && mkdir -p dist dist/modules/plugins-manager dist/modules/vnets-manager",
    "build:index.js": "npm run -s _noderify_lr lightning-rod.js > dist/index.js && npm run _build:log4js_workaround dist",
    "_build:log4js_workaround": "_f() { mkdir -p \"$1\"/appenders && echo \"module.exports = require('log4js/lib/appenders/stdout');\" > \"$1\"/appenders/stdout.js && echo \"module.exports = require('log4js/lib/appenders/file');\" > \"$1\"/appenders/file.js; }; _f",
    "build:wstt": "noderify -f ../build/Release/bufferutil -f ../build/default/bufferutil -f ../build/Release/validation -f ../build/default/validation node_modules/node-reverse-wstunnel/bin/wstt.js > dist/wstt.js",
    "build:call-wrapper": "npm run -s _noderify_lr ./modules/plugins-manager/call-wrapper.js > dist/modules/plugins-manager/call-wrapper.js",
    "build:plugin-wrapper": "npm run -s _noderify_lr ./modules/plugins-manager/plugin-wrapper.js > dist/modules/plugins-manager/plugin-wrapper.js",
    "build:network-wrapper": "npm run -s _noderify_lr ./modules/vnets-manager/network-wrapper.js > dist/modules/vnets-manager/network-wrapper.js && npm run _build:log4js_workaround dist/modules/vnets-manager",
    "build:package.dist.json": "cp package.dist.json dist/package.json",
    "build": "npm run build:init && npm run build:index.js && npm run build:wstt && npm run build:call-wrapper && npm run build:plugin-wrapper && npm run build:network-wrapper && npm run build:package.dist.json",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "autobahn": ">=0.9.9",
    "connection-tester": ">=0.1.1",
    "fs-access": "^1.0.1",
    "fuse-bindings": "^2.11.0",
    "is-running": ">=2.0.0",
    "log4js": "^1.1.1",
    "mknod": "^1.1.0",
    "nconf": "KostyaEsmukov/nconf#bundling_support",
    "node-reverse-wstunnel": ">=0.1.2",
    "q": ">=0.9.7",
    "requestify": ">=0.1.17",
    "shelljs": "0.7.5"
  },
  "devDependencies": {
    "noderify": "^2.0.0",
    "rimraf": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MDSLab/s4t-lightning-rod.git"
  },
  "keywords": [
    "IoT",
    "Stack4Things",
    "s4t",
    "Cloud",
    "WAMP"
  ],
  "author": "Nicola Peditto <npeditto@unime.it>",
