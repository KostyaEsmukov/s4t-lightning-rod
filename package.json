{
  "name": "s4t-lightning-rod",
  "version": "0.1.0",
  "description": "Implementation of the Lightning-rod, the Stack4Things node-side probe (this version works with the standalone version of IoTronic) http://stack4things.unime.it/",
  "main": "lightning-rod.js",
  "scripts": {
    "test": "node lightning-rod.js",
    "copy:package.dist.json": "cp package.dist.json dist/package.json",
    "build:index.js": "noderify -f fuse-bindings -f ideino-linino-lib -f ./build/Release/bufferutil.node -f ./build/Release/validation.node lightning-rod.js > dist/index.js",
    "build:wstt": "noderify -f ../build/Release/bufferutil -f ../build/default/bufferutil -f ../build/Release/validation -f ../build/default/validation node_modules/node-reverse-wstunnel/bin/wstt.js > dist/wstt.js",
    "build:log4js_workaround": "mkdir -p dist/appenders && echo \"module.exports = require('log4js/lib/appenders/stdout');\" > dist/appenders/stdout.js",
    "build": "npm run clean && mkdir -p dist && npm run build:index.js && npm run build:wstt && npm run build:log4js_workaround && npm run copy:package.dist.json",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "autobahn": ">=0.9.6",
    "connection-tester": ">=0.1.0",
    "fuse-bindings": "^2.11.0",
    "is-running": ">=2.0.0",
    "log4js": "^1.1.1",
    "nconf": "KostyaEsmukov/nconf#bundling_support",
    "node-reverse-wstunnel": ">=0.1.2",
    "q": ">=0.9.7",
    "requestify": ">=0.1.17"
  },
  "devDependencies": {
    "noderify": "^2.0.0",
    "rimraf": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MDSLab/s4t-lightning-rod.git"
  },
  "keywords": [
    "IoT",
    "WAMP",
    "Cloud",
    "WebSocket"
  ],
  "author": "Nicola Peditto <npeditto@unime.it>",
